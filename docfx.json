{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "corefx/src/**/ref/**/*.csproj"
          ],
          "exclude": [ "**/bin/**", "**/obj/**", "**System.Runtime.WindowsRuntime.csproj"  ],
          "cwd": ".."
        }
      ],
      "dest": "api"
    },
    {
      "src": [
        {
          "files": [
            "corefx/src/**/src/**/*.csproj",
            "coreclr/src/mscorlib/mscorlib.csproj"
          ],
          "exclude": [ "**/bin/**", "**/obj/**", "**System.Runtime.WindowsRuntime.csproj"  ],
          "cwd": ".."
        }
      ],
      "dest": "api_src"
    }
  ],
  "build": {
    "content":
      [
        {
          "files": ["api/**/*.yml"]
        },
        {
          "files": [
            "docs/**/*.md",
            "api/*.md"
          ]
        },
        {
          "files": ["toc.yml"]
        }
      ],
    "resource":
      [
        {
          "files": [
            "docs/images/**",
            "images/**"
          ]
        }
      ],
    "overwrite": "apidoc/*.md",
    "externalReference": [
    ],
    "globalMetadata": {
      "_appTitle": "CoreCLR site"
    },
    "dest": "_site",
    "template": [ "default", "template" ]
  }
}
