@model AspNetMVCRandomNumberGenerator.Models.QuestionAndAnswer
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET MVC Magic 8 ball</h1>
    <p class="lead">Ask your question, and get the answer.</p>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            <div class="control-label col-md-2">
                Ask your question:
            </div>
                @Html.EditorFor(model => model.NextQuestion,
                    new { htmlAttributes = new { @class = "form-control col-md-8" } })
            <div class="col-md-1">
                <input type="submit" value="Ask" class="btn btn-default" />
            </div>
        </div>

    </div>
}
<div class="row">
    <div class="col-md-4">
        Some text here
    </div>
    <div class="col-md-4">
        Whatever
    </div>
    <div class="col-md-4">
        Loren Ipsum rocks.
    </div>
</div>
